<div class="container marketing">
    <p id="notice"><%= notice %></p>
    <div class="row featurette">
        <h1>Список заказов</h1>
    </div>

    <div class="row featurette">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Имя</th>
            <th>Телефон</th>
            <th>Описание груза</th>
            <th>Адрес отправки</th>
            <th>Адрес доставки</th>
            <th>Статус заказа</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.id %></td>
              <td><%= order.fl_name %></td>
              <td><%= order.phone %></td>
              <td><%= order.description_cargo %></td>
              <td><%= order.point_a %></td>
              <td><%= order.point_b %></td>
              <td><%= order.status %></td>
              <td><%= link_to 'Открыть', order %></td>
              <td><%= link_to 'Изменить статус заказа', edit_order_path(order) %></td>
              <td><%= link_to 'Удалить', order, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate @orders, renderer: 'BootstrapPaginationHelper::LinkRenderer' %>
    </div>
</div>

