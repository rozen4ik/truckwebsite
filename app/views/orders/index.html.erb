<div class="container marketing">
    <p id="notice"><%= notice %></p>
    <div class="row featurette">
        <h1>Список заказов</h1>
    </div>

    <div class="row featurette">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Flname</th>
            <th>Phone</th>
            <th>Descriptioncargo</th>
            <th>Pointa</th>
            <th>Pointb</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.id %></td>
              <td><%= order.FLName %></td>
              <td><%= order.phone %></td>
              <td><%= order.DescriptionCargo %></td>
              <td><%= order.PointA %></td>
              <td><%= order.PointB %></td>
              <td><%= link_to 'Show', order %></td>
              <td><%= link_to 'Edit', edit_order_path(order) %></td>
              <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>

