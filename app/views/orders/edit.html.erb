<% if @order.errors.any? %>
  <div class="alert alert-danger">
    <h5><%= t('common.errors') %></h5>
    <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @order, local: true) do |f| %>
  <br>
  
  <div class="container">
  <h1>Изменение статуса заказа</h1>
    <div class="container">
      <div class="form-group">
        <%= f.hidden_field :fl_name, value: 'Как вас зовут?'%>
        <div class="row">
          <div class="col-6">
            <%= f.hidden_field :fl_name, class: 'form-control', placeholder: 'Иванов Иван' %>
          </div>  
        </div>
      </div>

      <div class="form-group">
        <%= f.hidden_field :phone, value: 'Ваш номер телефона' %>
        <div class="row">
          <div class="col-6">
            <%= f.hidden_field :phone, class: 'form-control', placeholder: '89997776655' %> 
          </div>  
        </div>
      </div>

      <div class="form-group">
        <%= f.hidden_field :description_cargo, value: 'Опишите груз' %>
        <div class="row">
          <div class="col-6">
            <%= f.hidden_field :description_cargo, class: 'form-control', rows: '5', placeholder: 'Опишите что везёте, габариты перевозимых вещей: размер, вес, количество' %>
          </div>  
        </div>
      </div>

      <div class="form-group">
        <%= f.hidden_field :point_a, value: 'Адрес отправки' %>
        <div class="row">
          <div class="col-6">
            <%= f.hidden_field :point_a, class: 'form-control', placeholder: 'г. Дмитров, ул. Советская, д1, кв1' %>
          </div>  
        </div>
      </div>

      <div class="form-group">
        <%= f.hidden_field :point_b, value: 'Адрес доставки' %>
        <div class="row">
          <div class="col-6">
            <%= f.hidden_field :point_b, class: 'form-control', placeholder: 'г. Дмитров, мкр. Махалина, д1, кв1' %>
          </div>  
        </div>
      </div>

      <div class="input-group">
        <div class="input-group-prepended ">
            <%= f.label :status, value: 'Статус заказа', class: 'input-group-text' %>
        </div>
        <%= f.select(:status, [['Ожидает подтверждения', 'Ожидает подтверждения'], ['Ожидает выполнения', 'Ожидает выполнения'], ['Выполняется', 'Выполняется'], ['Выполнен', 'Выполнен'], ['Приостановлено выполнение', 'Приостановлено выполнение']], {}, { class: 'custom-select' }) %>
    </div>

    <br>

    <div class="form-group">
      <%= f.submit class: 'btn btn-primary', value: 'Отправить' %>
      <%= link_to 'Назад', root_path, class: 'btn btn-outline-primary' %>
    </div>
  </div>
<% end %>
